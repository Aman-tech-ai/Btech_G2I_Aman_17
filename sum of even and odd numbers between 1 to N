#include<stdio.h>
int main (){
    int n,sum_e=0,sum_o=0;
    printf("Enter the value of n : ");
    scanf("%d",&n);
    for (int i=1;i<=n;i++){
        if(i%2==0){
            sum_e=sum_e+i;
        }
        else{
            sum_o=sum_o+i;
        }
    }
    printf("The sum of even numbers between 1 to %d is %d\n",n,sum_e);
    printf("The sum of odd numbers between 1 to %d is %d",n,sum_o);
    return 0;
}
